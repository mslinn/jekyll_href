  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "-I",
        "${workspaceRoot}",
        "${file}"
      ],
      "cwd": "${workspaceRoot}",
      "name": "RSpec - active spec file only",
      "program": "${env:HOME}/.rbenv/shims/rspec",
      "showDebuggerOutput": false,
      "request": "launch",
      "type": "Ruby",
      "useBundler": true,
    },
    {
      "args": [
        "-I",
        "${workspaceRoot}"
      ],
      "cwd": "${workspaceRoot}",
      "name": "RSpec - all",
      "program": "${env:HOME}/.rbenv/shims/rspec",
      "request": "launch",
      "showDebuggerOutput": false,
      "type": "Ruby",
      "useBundler": true,
    }
  ]
}
